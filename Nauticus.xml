<Ui xmlns="http://www.blizzard.com/wow/ui/"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">

<!--@debug@-->
<Script file="NautDebug.lua"/>
<!--@end-debug@-->

<Button name="Naut_MiniMapIconButton" hidden="true" virtual="true">
	<Anchors>
		<Anchor point="CENTER" relativeTo="MinimapBackdrop" relativePoint="TOPLEFT"/>
	</Anchors>
	<Scripts>
		<OnEnter>
			Nauticus:MapIconButtonMouseEnter(self)
		</OnEnter>
		<OnLeave>
			Nauticus:MapIconButtonMouseExit(self)
		</OnLeave>
	</Scripts>
</Button>

<Button name="Naut_WorldMapIconButton" hidden="true" virtual="true">
	<Anchors>
		<Anchor point="CENTER" relativeTo="WorldMapDetailFrame" relativePoint="TOPLEFT"/>
	</Anchors>
	<Scripts>
		<OnEnter>
			Nauticus:MapIconButtonMouseEnter(self)
		</OnEnter>
		<OnLeave>
			Nauticus:MapIconButtonMouseExit(self)
		</OnLeave>
	</Scripts>
</Button>

<Font name="Naut_NumberFont" font="Fonts\ARIALN.TTF" virtual="true">
	<FontHeight>
		<AbsValue val="14"/>
	</FontHeight>
	<Color r="1.0" g="0.82" b="0"/>
</Font>

<Frame name="Naut_TransportSelectFrame" inherits="UIDropDownMenuTemplate">
	<Scripts>
		<OnLoad>
			UIDropDownMenu_Initialize(self,
				function(self, level) Nauticus:TransportSelectInitialise(self, level); end, "MENU")
		</OnLoad>
	</Scripts>
</Frame>

</Ui>
