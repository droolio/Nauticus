						</Offset>
					</Anchor>
				</Anchors>
			</FontString>
			<FontString name="$parentPlat2ArrivalDepature" inherits="GameFontNormal" justifyH="LEFT">
				<Size>
					<AbsDimension x="100" y="16"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="$parentPlat2Name">
						<Offset>
							<AbsDimension x="10" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
			</FontString>
			<FontString name="$parentPlat1Time" inherits="Naut_NumberFont" justifyH="RIGHT">
				<Size>
					<AbsDimension x="75" y="16"/>
				</Size>
				<Anchors>
					<Anchor point="TOPRIGHT" relativePoint="BOTTOMRIGHT" relativeTo="$parentPlat1Name">
						<Offset>
							<AbsDimension x="0" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
			</FontString>
			<FontString name="$parentPlat2Time" inherits="Naut_NumberFont" justifyH="RIGHT">
				<Size>
					<AbsDimension x="75" y="16"/>
				</Size>
				<Anchors>
					<Anchor point="TOPRIGHT" relativePoint="BOTTOMRIGHT" relativeTo="$parentPlat2Name">
						<Offset>
							<AbsDimension x="0" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
			</FontString>
		</Layer>
	</Layers>
	<Frames>
		<Frame name="Naut_TransportSelectFrame" inherits="UIDropDownMenuTemplate">
			<Scripts>
				<OnLoad>
					UIDropDownMenu_Initialize(self,
						function(self, level) Nauticus:TransportSelectInitialise(level); end, "MENU")
				</OnLoad>
			</Scripts>
		</Frame>
		<Button name="$parentTransportSelectButton" inherits="UIPanelButtonTemplate">
			<Size>
				<AbsDimension x="18" y="18"/>
			</Size>
			<Anchors>
				<Anchor point="TOPRIGHT" relativePoint="TOPRIGHT">
					<Offset>
						<AbsDimension x="-17" y="-9"/>
					</Offset>
				</Anchor>
			</Anchors>
			<Scripts>
				<OnLoad>
					self:Hide()
				</OnLoad>
				<OnEnter>
					Nauticus:CancelScheduledEvent("NAUT_HIDE_NautFrameTransportSelectButton")
					NautFrameTransportSelectButton:SetAlpha(1)
					Nauticus:WidgetTooltip_Show("Select Transport")
				</OnEnter>
				<OnLeave>
					Nauticus:WidgetTooltip_Hide()
					Nauticus:TransportSelectButton_Fade("NautFrameTransportSelectButton")
				</OnLeave>
				<OnClick>
					Nauticus:WidgetTooltip_Hide()
					ToggleDropDownMenu(1, nil, Naut_TransportSelectFrame, self, -20, 0)
				</OnClick>
			</Scripts>
			<Layers>
				<Layer level="BORDER">
					<Texture>
						<Anchors>
							<Anchor point="TOPLEFT">
								<Offset x="2" y="-2"/>
							</Anchor>
							<Anchor point="BOTTOMRIGHT">
								<Offset x="-2" y="2"/>
							</Anchor>
						</Anchors>
						<Color r="0.7" g="0" b="0"/>
					</Texture>
				</Layer>
			</Layers>
			<NormalTexture file="Interface\Glues\CharacterCreate\UI-RotationRight-Big-Up">
				<TexCoords left="0.203" top="0.203" right="0.797" bottom="0.781"/>
			</NormalTexture>
			<PushedTexture file="Interface\Glues\CharacterCreate\UI-RotationRight-Big-Down">
				<TexCoords left="0.203" top="0.203" right="0.797" bottom="0.781"/>
			</PushedTexture>
		</Button>
	</Frames>
	<Scripts>
		<OnEnter>
			Nauticus:CancelScheduledEvent("NAUT_HIDE_NautFrameTransportSelectButton")
			NautFrameTransportSelectButton:SetAlpha(1)
			NautFrameTransportSelectButton:Show()
		</OnEnter>
		<OnLeave>
			Nauticus:TransportSelectButton_Fade("NautFrameTransportSelectButton")
		</OnLeave>
		<OnLoad>
			self:SetBackdropColor(1, 0, 0, 0.3)
			self:SetBackdropBorderColor(1, 0, 0, 0.5)
		</OnLoad>
	</Scripts>
</Frame>

