</Button>

<Font name="Naut_NumberFont" font="Fonts\ARIALN.TTF" virtual="true">
	<FontHeight>
		<AbsValue val="14"/>
	</FontHeight>
	<Color r="1.0" g="0.82" b="0"/>
</Font>

<Frame name="NautHeaderFrame" frameStrata="BACKGROUND" enableMouse="true" movable="true" parent="UIParent" hidden="true">
	<Size>
		<AbsDimension x="195" y="26"/>
	</Size>
	<Anchors>
		<Anchor point="CENTER"/>
	</Anchors>
	<Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
		<BackgroundInsets>
			<AbsInset left="3" right="4" top="5" bottom="5"/>
		</BackgroundInsets>
		<TileSize>
			<AbsValue val="16"/>
		</TileSize>
		<EdgeSize>
			<AbsValue val="16"/>
		</EdgeSize>
	</Backdrop>
	<Layers>
		<Layer level="ARTWORK">
			<Texture name="$parentIcon" file="Interface\AddOns\Nauticus\Artwork\NauticusLogo">
				<Size>
					<AbsDimension x="16" y="16"/>
				</Size>					
				<Anchors>
					<Anchor point="BOTTOMLEFT">
						<Offset>
							<AbsDimension x="8" y="5"/>
						</Offset>
					</Anchor>
				</Anchors>
			</Texture>
		</Layer>
		<Layer level="MEDIUM">
			<FontString name="$parentAddonName" inherits="GameFontNormal" text="Nauticus" justifyH="LEFT">
				<Size>
					<AbsDimension x="200" y="18"/>
				</Size>
				<Anchors>
					<Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$parentIcon">
						<Offset>
							<AbsDimension x="6" y="1"/>
						</Offset>
					</Anchor>
				</Anchors>
			</FontString>
		</Layer>
	</Layers>
	<Frames>
		<Button name="$parentCloseButton" inherits="UIPanelButtonTemplate">
			<Size>
				<AbsDimension x="15" y="15"/>
			</Size>
			<Anchors>
				<Anchor point="RIGHT" relativePoint="RIGHT">
					<Offset>
						<AbsDimension x="-6" y="0"/>
					</Offset>
				</Anchor>
			</Anchors>
			<Scripts>
				<OnClick>
					Nauticus:Close_OnClick()
				</OnClick>
				<OnEnter>
					Nauticus:WidgetTooltip_Show("Close", "Type /nauticus or /naut gui show to show again.")
				</OnEnter>
				<OnLeave>
					Nauticus:WidgetTooltip_Hide()
				</OnLeave>
			</Scripts>
			<NormalTexture file="Interface\Buttons\UI-Panel-MinimizeButton-Up">
				<TexCoords left="0.175" top="0.175" right="0.825" bottom="0.825"/>
			</NormalTexture>
			<PushedTexture file="Interface\Buttons\UI-Panel-MinimizeButton-Down">
				<TexCoords left="0.175" top="0.175" right="0.825" bottom="0.825"/>
			</PushedTexture>
		</Button>
		<Button name="$parentMinimiseButton" inherits="UIPanelButtonTemplate">
			<Size>
				<AbsDimension x="15" y="15"/>
			</Size>
			<Anchors>
				<Anchor point="RIGHT" relativePoint="LEFT" relativeTo="$parentCloseButton">
					<Offset>
						<AbsDimension x="0" y="0"/>
					</Offset>
				</Anchor>
			</Anchors>
			<Scripts>
				<OnClick>
					Nauticus:WidgetTooltip_Hide()
					Nauticus:Minimise_OnClick()
				</OnClick>
				<OnEnter>
					if NautFrame:IsVisible() then
						Nauticus:WidgetTooltip_Show("Minimise")
					else
						Nauticus:WidgetTooltip_Show("Maximise")
					end
				</OnEnter>
				<OnLeave>
					Nauticus:WidgetTooltip_Hide()
				</OnLeave>
			</Scripts>
			<NormalTexture file="Interface\Buttons\UI-MinusButton-UP">
				<TexCoords left="0.05" top="0.05" right="0.95" bottom="0.95"/>
			</NormalTexture>
			<PushedTexture file="Interface\Buttons\UI-MinusButton-DOWN">
				<TexCoords left="0.05" top="0.05" right="0.95" bottom="0.95"/>
			</PushedTexture>
		</Button>
		<Button name="$parentOptionsButton" inherits="UIPanelButtonTemplate">
			<Size>
				<AbsDimension x="15" y="15"/>
			</Size>
			<Anchors>
				<Anchor point="RIGHT" relativePoint="LEFT" relativeTo="$parentMinimiseButton">
					<Offset>
						<AbsDimension x="-4" y="0"/>
					</Offset>
				</Anchor>
			</Anchors>
			<Scripts>
				<OnClick>
					Nauticus:WidgetTooltip_Hide()
					Nauticus:Options_OnClick()
				</OnClick>
				<OnEnter>
					Nauticus:WidgetTooltip_Show("Options")
				</OnEnter>
				<OnLeave>
					Nauticus:WidgetTooltip_Hide()
				</OnLeave>
			</Scripts>
			<Layers>
				<Layer level="BORDER">
					<Texture>
						<Anchors>
							<Anchor point="TOPLEFT">
								<Offset x="2" y="-2"/>
							</Anchor>
							<Anchor point="BOTTOMRIGHT">
								<Offset x="-2" y="2"/>
							</Anchor>
						</Anchors>
						<Color r="0.7" g="0" b="0"/>
					</Texture>
				</Layer>
			</Layers>
			<NormalTexture file="Interface\ChatFrame\UI-ChatIcon-Chat-Up">
				<TexCoords left="0.1" top="0.1" right="0.9" bottom="0.9"/>
			</NormalTexture>
			<PushedTexture file="Interface\ChatFrame\UI-ChatIcon-Chat-Down">
				<TexCoords left="0.1" top="0.1" right="0.9" bottom="0.9"/>
			</PushedTexture>
		</Button>
	</Frames>
	<Scripts>
		<OnLoad>
			self:SetBackdropColor(103/255, 2/255, 6/255, 1)
			self:SetBackdropBorderColor(1, 0, 0, 0.5)
		</OnLoad>
		<OnMouseUp>
			if self.isMoving then
				self:StopMovingOrSizing()
				self.isMoving = false
				Nauticus:UpdateUI()
			end
		</OnMouseUp>
		<OnMouseDown>
			if (not self.isLocked or self.isLocked == 0) and arg1 == "LeftButton" then
				self:StartMoving()
				self.isMoving = true
			end
		</OnMouseDown>
	</Scripts>
</Frame>

